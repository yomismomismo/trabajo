<!DOCTYPE html>

<title>Producto</title>

{% block body %}
    <h1>Producto</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ producto.id }}</td>
            </tr>
            <tr>
                <th>Imagen</th>
                <td>{{ producto.imagen }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ producto.nombre }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ producto.descripcion }}</td>
            </tr>
            <tr>
                <th>Unidades_stock</th>
                <td>{{ producto.unidadesStock }}</td>
            </tr>
            <tr>
                <th>Categoria</th>
                <td>{{ producto.categoria }}</td>
            </tr>
            <tr>
                <th>Unidades_vendidas</th>
                <td>{{ producto.unidadesVendidas }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('producto_index') }}">back to list</a>

    <a href="{{ path('producto_edit', {'id': producto.id}) }}">edit</a>

    {{ include('producto/_delete_form.html.twig') }}
{% endblock %}
