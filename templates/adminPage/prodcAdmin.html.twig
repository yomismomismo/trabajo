{% extends "adminPage/layout.html.twig" %}
{% block head %}
        
        <link rel="stylesheet" href="/plugins/chartist/dist/chartist.min.css">
                <link rel="stylesheet" href="/plugins/datatables.net-bs4/css/dataTables.bootstrap4.min.css">
        <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
        <script src="/plugins/chartist/dist/chartist.min.js"></script>
        <script src="/plugins/datatables.net/js/jquery.dataTables.min.js"></script>
        <script src="/plugins/datatables.net-bs4/js/dataTables.bootstrap4.min.js"></script>
        <script src="/js/js-admin/datatables.js"></script>
        <script src="/js/js-admin/widget-statistic.js"></script>
{% endblock %}
{% block contenido %}
                              <!-- Productos admin start -->

                                   <div class="row">
                            <div class="col-sm-12">
                                <div class="card">
                                    <div class="card-header d-block">
                                        <h3>Productos</h3>
                                    </div>
                                        <div class="table-responsive">
                                                <div class="card-body">
                                            <table id="simpletable"
                                                   class="table table-striped table-bordered nowrap">
                                                   <a href="{{ path('producto_new') }}">Create new</a>
                                                <thead>
                                                <tr>
                                                    <th>Imagen</th>
                                                    <th>Nombre</th>
                                                    <th>Descripción</th>
                                                    <th>Precio</th>
                                                    <th>Unidades Vendidas</th>
                                                    <th>Unidades Stock</th>
                                                    <th>Acciones</th>
                                                </tr>
                                                </thead>
                                                <tbody>
                                                          {% for producto in productos %}
                                                              <tr>
                                                               <td>
                                                                <div class="d-inline-block align-middle">
                                                                     <!-- La variable imagen separa los datos que recibe de la base de datos en un array -->
					                                                    {% set imagen = producto.imagen|split('|') %}
		                                                            <!-- For rutaImg saca el primer dato del array que debe ser siempre la ruta de la imagen -->
					                                                    {% set ruta = "" %}
					                                                    {% for rutaImg in imagen|slice(0, 1) %}
						                                                    {% set ruta = rutaImg %}
					                                                    {% endfor %}

                                                                        {% for imagen in imagen|slice(1,1) %}
                                                                            <img src="{{ruta}}{{imagen}}" alt="" class="align-top mr-15" style="width: 100px"/>
                                                                        {% endfor %}
                                                                    
                                                                </div>
                                                                </td>
                                                                <td>{{ producto.nombre }}</td>
                                                                <td>{{ producto.descripcion }}</td>
                                                                <td>{{ producto.precio }}€</td>
                                                                <td>{{ producto.UnidadesVendidas }}</td>
                                                                <td>{{ producto.UnidadesStock }}</td>
                                                                <td>
                                                                     <a href="{{ path('detalleProducto', {'id': producto.id}) }}"><i class="ik ik-edit f-16 mr-15 text-green"></i></a>
                                                                    {{ include('producto/_delete_form.html.twig') }}
                                                                </td>
                                                                {# <td>{{ include('producto/_delete_form.html.twig') }}</td>
                                                                <td><a href="#!"><i class="ik ik-edit f-16 mr-15 text-green"></i></a><a href="#!"><i class="ik ik-trash-2 f-16 text-red"></i></a></td> #}
                                                                {# <td>{{ producto.unidades_vendidas }}</td> #}
                                                                {# <td>{{ producto.getIdUsuario().email }}</td>
                                                                <td>{{ producto.getIdProducto().nombre }}</td>
                                                                <td>{{ producto.puntuacion }}</td>
                                                                <td>{{ producto.comentario }}</td> #}
                                                                {# <td>{{ include('comentario/_delete_form.html.twig') }}</td> #}
                    {# <a href="{{ path('comentario_show', {'id': comentario.id}) }}">show</a> #}
                    {# <a href="{{ path('comentario_edit', {'id': comentario.id}) }}">edit</a> #}
                                                                
                                                                </tr>
                                                            {% else %}
                                                                <tr>
                                                                    <td colspan="4">no records found</td>
                                                                </tr>
                                                            {% endfor %}
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                                </div>
                                <!--  Productos admin end -->
{% block script %}{% endblock %}
{% endblock %}