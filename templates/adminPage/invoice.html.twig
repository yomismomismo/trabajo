								 {% endfor %}
                                    <div class="col-6">
                                        <p class="lead">Amount Due 10/11/2018</p>
                                        <div class="table-responsive">
                                            <table class="table">
                                                <tr>
                                                    <th style="width:50%">Subtotal:</th>
                                                    <td style="color:red margin-left:100px">{{subtotal}}€</td>
                                                </tr>
